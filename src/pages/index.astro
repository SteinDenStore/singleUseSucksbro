<!-- progress bar -->
<div
  class="progress-bar h-2 fixed w-full bg-gradient-to-r from-cyan-50 to-rose-500 left-0 origin-top-left top-0 right-0"
>
</div>
<script>
  /* Import af Motion One bibliotek */
  import { animate, stagger, inView, scroll } from "motion";

  /* Min JS Herunder*/
  scroll(animate(".progress-bar", { scaleX: [0, 1] }));

  /* Mange elementer der animerer ind */
  inView(".mangeelementerinview", () => {
    animate(
      ".mangeelementer1",
      { x: [-2000, 0], y: [-50, 0] },
      { duration: 1 }
    );
    animate(
      ".mangeelementer2",
      { x: [-1500, 0], y: [-100, 0] },
      { duration: 1.5 }
    );
    animate(
      ".mangeelementer3",
      { x: [-1000, 0], y: [-150, 0] },
      { duration: 1.5 }
    );
    animate(".mangeelementer4", { x: [1750, 0] }, { duration: 1.5 });
    animate(
      ".mangeelementer5",
      { x: [-2000, 0], y: [-100, 0] },
      { duration: 1 }
    );
    animate(".mangeelementer6", { x: [2000, 0] }, { duration: 2 });
    return () => {
      animate(
        ".mangeelementer1",
        { x: [-2000, 0], y: [-50, 0] },
        { duration: 1 }
      );
      animate(
        ".mangeelementer2",
        { x: [-1500, 0], y: [-100, 0] },
        { duration: 3 }
      );
      animate(
        ".mangeelementer3",
        { x: [-1000, 0], y: [-150, 0] },
        { duration: 3 }
      );
      animate(".mangeelementer4", { x: [1750, 0] }, { duration: 2 });
      animate(
        ".mangeelementer5",
        { x: [-2000, 0], y: [-100, 0] },
        { duration: 1 }
      );
      animate(".mangeelementer6", { x: [2000, 0] }, { duration: 2 });
    };
  });

  // fade in animationer til statements
  const fadein1 = document.querySelector(".fadein1");

  inView(fadein1, () => {
    fadein1.classList.add("animate__animated", "animate__fadeInUp");
    fadein1.style.animationDuration = "2s"; // Slower animation
  });
  const fadein2 = document.querySelector(".fadein2");

  inView(fadein2, () => {
    fadein2.classList.add("animate__animated", "animate__fadeInUp");
    fadein2.style.animationDuration = "2s"; // Slower animation
  });
  scroll(animate(".stickyparallax1", { y: [-300, 0] }), {
    target: document.querySelector(".stickyparallax1"),
  });

  /* Horisontal scroll sektion */
  scroll(
    animate("#horisontalliste", {
      transform: ["none", "translateX(-500vw)"],
    }),
    { target: document.querySelector("#horisontalscrollsection") }
  );
</script>
